import { Button, VerticalBox, LineEdit, ScrollView, GroupBox, ComboBox } from "std-widgets.slint";
import {Alert} from "alert.slint";

struct PazienteData {
    inVita: bool,
    cf: string,
    cognome: string,
    nome: string,
    sesso: string,
    dataNascita: string,
    comuneNascita: string,
    indirizzoResidenza: string,
    asp: string,
    MMGCf: string,
    MMGCognome: string,
    MMGNome: string,
    MMGDataScelta: string,
    ssnTipoAssistito: string,
    ssnInizioAssistenza: string,
    ssnFineAssistenza: string,
    ssnMotivazioneFineAssistenza: string,
    ssnNumeroTessera: string,
    dataDecesso: string,
}

component ReadOnlyLineEdit inherits LineEdit {
    read_only: true;
    height: 35px;
}

component FieldLabel inherits Text {
    font_weight: 500;
    vertical_alignment: center;
}

export component MainWindow {
    width: 1200px;
    height: 900px;

    // ALERT
    in-out property <string> alert-type: "info";
    in-out property <bool> alert-visibile: false;
    in-out property <string> alert-message: "";
    callback close-alert();

    // WebSocket
    in-out property <bool> ws_server_active: false;
    in-out property <int> ws_connected_clients: 0;
    callback invia_dati_ws();
    callback ricerca_anagrafica();
    callback aggiungi_nuovo_assistito();
    callback salva();
    callback scheda_indirizzo();
    callback metodo_pagamento();

    callback cf_input_changed(string);
    in-out property <[string]> combo_options: [];

    in-out property <bool> is_loading: false;
    in-out property <string> cf_input: "";
    in-out property <string> search_type: "cf"; // "cf" o "details"
    in-out property <string> nome: "";
    in-out property <string> cognome: "";
    in-out property <string> dataNascita: "";
    in-out property <PazienteData> paziente_data: {
        inVita: false,
        cf: "",
        cognome: "",
        nome: "",
        sesso: "",
        dataNascita: "",
        comuneNascita: "",
        indirizzoResidenza: "",
        asp: "",
        MMGCf: "",
        MMGCognome: "",
        MMGNome: "",
        MMGDataScelta: "",
        ssnTipoAssistito: "",
        ssnInizioAssistenza: "",
        ssnFineAssistenza: "",
        ssnMotivazioneFineAssistenza: "",
        ssnNumeroTessera: "",
        dataDecesso: "",
    };
    callback cerca_paziente();
    callback reset_cf_fields();
    callback reset_detail_fields();
    callback on-search-type-changed(string);
    // Copia negli appunti il JSON del paziente
    callback copia_json();
    // Copia negli appunti il solo Codice Fiscale del paziente
    callback copia_cf();

    VerticalBox {
        // WebSocket Status Badge
        HorizontalLayout {
            padding: 10px;
            spacing: 10px;
            alignment: end;
            height: 40px;

            Rectangle {
                width: 250px;
                height: 30px;
                background: root.ws_server_active ? green : red;
                border-radius: 15px;

                HorizontalLayout {
                    padding-left: 15px;
                    padding-right: 15px;
                    padding-top: 5px;
                    padding-bottom: 5px;
                    spacing: 10px;
                    alignment: center;

                    Rectangle {
                        width: 12px;
                        height: 12px;
                        background: white;
                        border-radius: 6px;
                    }

                    Text {
                        text: root.ws_server_active ? "Server Attivo" : "Server Inattivo";
                        color: white;
                        font-weight: 600;
                        font-size: 12px;
                    }

                    Rectangle {
                        width: 1px;
                        height: 20px;
                        background: white;
                    }

                    Text {
                        text: root.ws_connected_clients + " client";
                        color: white;
                        font-weight: 600;
                        font-size: 12px;
                    }
                }
            }
        }

        HorizontalLayout {
            padding: 10px;
            spacing: 10px;
            alignment: center;

            GroupBox {
                title: "Dati di Ricerca";
                width: parent.width;
                vertical-stretch: 0; // Impedisce al GroupBox di espandersi verticalmente più del necessario

                        VerticalLayout {
                    padding: 10px;
                    spacing: 10px;
                    vertical-stretch: 0; // Anche il layout interno non deve espandersi

                            // Selezione tipo ricerca
                    HorizontalLayout {
                        spacing: 10px;
                        alignment: start;
                        vertical-stretch: 0;

                        Text {
                            text: "Tipo di ricerca:";
                            vertical-alignment: center;
                        }

                        ComboBox {
                            width: 200px;
                            model: root.combo_options;
                            selected => {
                                root.on-search-type-changed(self.current-index);
                            }
                        }
                    }

                    // Campi di ricerca
                    HorizontalLayout {
                        spacing: 10px;
                        alignment: start;
                        vertical-stretch: 0;

                                // Ricerca per CF
                        if root.search_type == "cf": HorizontalLayout {
                            spacing: 10px;
                            vertical-stretch: 0;

                            LineEdit {
                                placeholder-text: "Inserisci Codice Fiscale";
                                text <=> root.cf_input;
                                height: 35px;
                                width: 250px;
                                enabled: !root.is_loading;
                                edited(text) => {
                                    root.cf_input_changed(text);
                                }
                            }

                            Button {
                                text: root.is_loading ? "Ricerca in corso..." : "Cerca";
                                height: 35px;
                                enabled: !root.is_loading;
                                clicked => {
                                    root.cerca_paziente();
                                }
                            }
                            Button {
                                text: "Copia JSON";
                                height: 35px;
                                enabled: !root.is_loading;
                                clicked => { root.copia_json(); }
                            }
                            Button {
                                text: "Copia CF";
                                height: 35px;
                                enabled: !root.is_loading && root.paziente_data.cf != "";
                                clicked => { root.copia_cf(); }
                            }
                        }

                                // Ricerca per dettagli
                        if root.search_type == "details": HorizontalLayout {
                            spacing: 10px;
                            vertical-stretch: 0;

                            LineEdit {
                                placeholder-text: "Nome";
                                text <=> root.nome;
                                height: 35px;
                                width: 150px;
                                enabled: !root.is_loading;
                            }

                            LineEdit {
                                placeholder-text: "Cognome";
                                text <=> root.cognome;
                                height: 35px;
                                width: 150px;
                                enabled: !root.is_loading;
                            }

                            LineEdit {
                                placeholder-text: "Data di Nascita";
                                text <=> root.dataNascita;
                                height: 35px;
                                width: 150px;
                                enabled: !root.is_loading;
                            }

                            Button {
                                text: root.is_loading ? "Ricerca in corso..." : "Cerca";
                                height: 35px;
                                enabled: !root.is_loading && root.nome != "" && root.cognome != "" && root.dataNascita != "";
                                clicked => {
                                    root.cerca_paziente();
                                }
                            }
                            Button {
                                text: "Copia JSON";
                                height: 35px;
                                enabled: !root.is_loading;
                                clicked => { root.copia_json(); }
                            }
                            Button {
                                text: "Copia CF";
                                height: 35px;
                                enabled: !root.is_loading && root.paziente_data.cf != "";
                                clicked => { root.copia_cf(); }
                            }
                        }
                    }
                }
            }
        }

        // WebSocket Control Panel
        HorizontalLayout {
            padding: 10px;
            spacing: 10px;
            alignment: center;

            GroupBox {
                title: "Pannello di Controllo WebSocket";
                width: parent.width;
                vertical-stretch: 0;

                VerticalLayout {
                    padding: 10px;
                    spacing: 8px;

                    Text {
                        text: root.ws_connected_clients == 0 ? "⚠ Nessun client connesso" : "✓ " + root.ws_connected_clients + " client connessi";
                        horizontal-alignment: center;
                        color: root.ws_connected_clients == 0 ? #dc3545 : #28a745;
                        font-weight: 600;
                        font-size: 12px;
                    }

                    HorizontalLayout {
                        spacing: 8px;
                        alignment: start;

                        Button {
                            text: "Invia Dati";
                            height: 35px;
                            enabled: root.ws_server_active && root.ws_connected_clients > 0;
                            clicked => { root.invia_dati_ws(); }
                        }

                        Button {
                            text: "Ricerca Anagrafica";
                            height: 35px;
                            enabled: root.ws_server_active && root.ws_connected_clients > 0;
                            clicked => { root.ricerca_anagrafica(); }
                        }

                        Button {
                            text: "Nuovo Assistito";
                            height: 35px;
                            enabled: root.ws_server_active && root.ws_connected_clients > 0;
                            clicked => { root.aggiungi_nuovo_assistito(); }
                        }
                    }

                    HorizontalLayout {
                        spacing: 8px;
                        alignment: start;

                        Button {
                            text: "Salva";
                            height: 35px;
                            enabled: root.ws_server_active && root.ws_connected_clients > 0;
                            clicked => { root.salva(); }
                        }

                        Button {
                            text: "Indirizzo";
                            height: 35px;
                            enabled: root.ws_server_active && root.ws_connected_clients > 0;
                            clicked => { root.scheda_indirizzo(); }
                        }

                        Button {
                            text: "Metodo Pagamento";
                            height: 35px;
                            enabled: root.ws_server_active && root.ws_connected_clients > 0;
                            clicked => { root.metodo_pagamento(); }
                        }
                    }
                }
            }
        }

        ScrollView {
            VerticalLayout {
                padding: 20px;
                spacing: 15px;

                       // Dati Paziente
                GroupBox {
                    title: "Dati Paziente";
                    VerticalLayout {
                        padding: 10px;
                        spacing: 10px;

                        HorizontalLayout {
                            spacing: 10px;
                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "CF:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.cf;
                                }
                            }

                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "Cognome:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.cognome;
                                }
                            }

                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "Nome:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.nome;
                                }
                            }

                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "Sesso:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.sesso;
                                }
                            }
                        }

                        HorizontalLayout {
                            spacing: 10px;
                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "Data Nascita:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.dataNascita;
                                }
                            }

                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "Luogo Nascita:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.comuneNascita;
                                }
                            }

                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "Indirizzo:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.indirizzoResidenza;
                                }
                            }
                        }

                    }
                }

               // Dati CF
               GroupBox {
                    title: "Dati CF";
                    VerticalLayout {
                        padding: 10px;
                        spacing: 10px;

                        HorizontalLayout {
                            spacing: 10px;
                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "ASP:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.asp;
                                }
                            }

                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "N° Tessera:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.ssnNumeroTessera;
                                }
                            }

                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "Vivo:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.inVita ? "SI" : "NO";
                                }
                            }
                        }
                    }
                }
                // Dati SSN
                GroupBox {
                    title: "Dati SSN";
                    VerticalLayout {
                        padding: 10px;
                        spacing: 10px;

                        HorizontalLayout {
                            spacing: 10px;
                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "Medico CF:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.MMGCf;
                                }
                            }

                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "Medico Cognome:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.MMGCognome;
                                }
                            }

                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "Medico Nome:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.MMGNome;
                                }
                            }

                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "Medico Data:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.MMGDataScelta;
                                }
                            }
                        }

                        HorizontalLayout {
                            spacing: 10px;
                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "Tipo SSN:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.ssnTipoAssistito;
                                }
                            }

                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "Inizio SSN:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.ssnInizioAssistenza;
                                }
                            }

                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "Fine SSN:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.ssnFineAssistenza;
                                }
                            }
                        }

                        HorizontalLayout {
                            spacing: 10px;
                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "Motivo Fine:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.ssnMotivazioneFineAssistenza;
                                }
                            }

                            VerticalLayout {
                                spacing: 5px;
                                FieldLabel {
                                    text: "Data Decesso:";
                                }

                                ReadOnlyLineEdit {
                                    text: root.paziente_data.dataDecesso == "" ? (root.cf_input == "" ? "-" : "in vita") : root.paziente_data.dataDecesso;
                                }
                            }
                        }
                    }
                }
            }
        }
    }
    Alert {
        visible: root.alert-visibile;
        modalvisibile: root.alert-visibile;
        message: root.alert-message;
        alert-type: root.alert-type;
        close => {
            root.close-alert();
        }
    }
}
